        if (!/^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+(.[a-zA-Z0-9_-])+/.test(email)) {
            window.alert(tt('Error email address!', '错误的邮箱地址输入.'));
            return;
        }

        var data = {
            email: email,
            _csrf: document.getElementById('csrf-token').content
        }

        $.post('/bind-email-address/', data, function (res) {
            console.log(res);
        });
    }
});
</script>